// MemeForge Prisma Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique @db.VarChar(255)
  passwordHash  String       @map("password_hash") @db.VarChar(255)
  username      String       @unique @db.VarChar(100)
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @default(now()) @updatedAt @map("updated_at")
  dailyLimit    Int          @default(50) @map("daily_limit")
  isActive      Boolean      @default(true) @map("is_active")

  characters    Character[]
  assets        Asset[]
  memes         Meme[]
  generations   Generation[]

  @@map("users")
}

model Character {
  id                Int       @id @default(autoincrement())
  userId            Int       @map("user_id")
  name              String    @db.VarChar(100)
  description       String    @db.Text
  stylePrompt       String    @map("style_prompt") @db.Text
  referenceImageUrl String?   @map("reference_image_url") @db.Text
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @default(now()) @updatedAt @map("updated_at")
  isActive          Boolean   @default(true) @map("is_active")

  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  memes             Meme[]

  @@index([userId])
  @@map("characters")
}

model Asset {
  id          Int       @id @default(autoincrement())
  userId      Int       @map("user_id")
  name        String    @db.VarChar(100)
  description String?   @db.Text
  imageUrl    String    @map("image_url") @db.Text
  assetType   String    @map("asset_type") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map("created_at")
  isActive    Boolean   @default(true) @map("is_active")

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("assets")
}

model Meme {
  id              Int       @id @default(autoincrement())
  userId          Int?      @map("user_id")
  prompt          String    @db.Text
  enhancedPrompt  String    @map("enhanced_prompt") @db.Text
  imageUrl        String    @map("image_url") @db.Text
  characterId     Int?      @map("character_id")
  isPublic        Boolean   @default(false) @map("is_public")
  likes           Int       @default(0)
  views           Int       @default(0)
  format          String?   @default("square") @db.VarChar(20)
  brandColor1     String?   @map("brand_color_1") @db.VarChar(7)
  brandColor2     String?   @map("brand_color_2") @db.VarChar(7)
  logoUrl         String?   @map("logo_url") @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")

  user            User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  character       Character? @relation(fields: [characterId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([isPublic])
  @@map("memes")
}

model Generation {
  id         Int       @id @default(autoincrement())
  userId     Int?      @map("user_id")
  sessionId  String?   @map("session_id") @db.VarChar(255)
  ipAddress  String?   @map("ip_address") @db.VarChar(45)
  createdAt  DateTime  @default(now()) @map("created_at")

  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionId])
  @@index([createdAt])
  @@map("generations")
}
